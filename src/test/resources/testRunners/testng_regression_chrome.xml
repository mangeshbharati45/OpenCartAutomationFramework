<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Chrome Suite" verbose="4"
	thread-count="3" parallel="tests">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.ui.listeners.TestAllureListener" />
		<listener class-name="com.ui.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Page Test Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.LoginPageTest" />
		</classes>
	</test>

	<test name="Account Page Test Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.MyAccountPageTest" />
		</classes>
	</test>

	<test name="Search Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.SearchPageTest" />
		</classes>
	</test>
	
	<test name="Register Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.RegisterPageTest" />
		</classes>
	</test>

	<test name="Product Details Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.ProductDetailsPageTest" />
		</classes>
	</test>


</suite>	