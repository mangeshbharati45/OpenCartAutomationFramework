<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4" thread-count="3"
	parallel="tests">

	<test name="Login Page Test Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.ui.test.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.ui.test.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.LoginPageTest" />
		</classes>
	</test>

	<test name="Account Page Test Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.ui.test.MyAccountPageTest" />
		</classes>
	</test>
	
	<test name="Account Page Test Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.ui.test.MyAccountPageTest" />
		</classes>
	</test>
	
	<test name="Account Page Test Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.MyAccountPageTest" />
		</classes>
	</test>

	<test name="Register Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.RegisterPageTest" />
		</classes>
	</test>

	<test name="Search Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.SearchPageTest" />
		</classes>
	</test>

	<test name="Product Details Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.ui.test.ProductDetailsPageTest" />
		</classes>
	</test>


</suite>	